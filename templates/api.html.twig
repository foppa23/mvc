{% extends "base.html.twig" %}

{% block title %}API{% endblock %}

{% block body %}
<div class="two-col-layout">
<main class="main">
    <aside class="aside">
        <h3>Innehållsförteckning</h3>
        <ul>
            <li><a href="#api/quote">api/quote</a></li>
            <li><a href="#api/deck">api/deck</a></li>
            <li><a href="#api/deck/shuffle">api/deck/shuffle</a></li>
            <li><a href="#api/deck/draw">api/deck/draw</a></li>
            <li><a href="#api/deck/draw/number">api/deck/draw/:number</a></li>
        </ul>
    </aside>
</main>
    <article class="article">
        <h1>API-dokumentation</h1>
        <br>
        <h3 class="api-h3" id="api/quote">api/quote</h3>
        <p class="kmom">Innehåller dagens citat, dagens datum och tid för när svaret genererades.</p>
        <a href="{{ path('api_quote') }}" class="button">Dagens citat</a>

        <h3  class="api-h3" id="api/deck">api/deck</h3>
        <p class="kmom">Visar en sorterad kortlek i JSON-format.</p>
        <a href="{{ path('api_deck') }}" class="button">Visa sorterad kortlek</a>

        <h3  class="api-h3" id="api/deck/shuffle">api/deck/shuffle</h3>
        <p class="kmom">Blandar kortleken och lagrar den i sessionen.</p>
        <form action="{{ path('api_shuffle_deck') }}" method="post">
            <button type="submit" class="button">Visa blandad kortlek</button>
        </form>

        <h3  class="api-h3" id="api/deck/draw">api/deck/draw</h3>
        <p class="kmom">Drar ett kort från kortleken i sessionen.</p>
        <form action="{{ path('api_draw_one') }}" method="post">
            <button type="submit" class="button">Dra ett kort</button>
        </form>

        <h3  class="api-h3" id="api/deck/draw/number">api/deck/draw/:number</h3>
        <p class="kmom">Drar ett valt antal kort.</p>
        <form action="{{ path('api_draw_cards', {'number': 3}) }}" method="post">
            <label for="number">Antal kort:</label>
            <input type="number" id="number" name="number" min="1" max="52" value="3">
            <button class="button" type="submit" formaction="{{ path('api_draw_cards', {'number': 3}) }}">Visa dragna kort</button>
        </form>

    </article>
</div>
{% endblock %}